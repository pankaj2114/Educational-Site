@{
    ViewData["Title"] = "About Faculty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .img-fluid {
        max-width: 75%;
        min-width: 75%;
        height: 250px;
    }
</style>
<!-- Testimonial 3 - Bootstrap Brain Component -->
<section class="bg-light py-5 py-xl-8">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                <h2 class="fs-6 text-secondary mb-2 text-uppercase text-center">Dedicated Faculty Members</h2>
                <p class="display-5 mb-4 mb-md-5 fs-3 text-center">Committed to academic rigor, personal growth, and community development.</p>
                <hr class="w-50 mx-auto mb-5 mb-xl-9 border-dark-subtle">
            </div>
        </div>
    </div>

    <div class="container overflow-hidden">
        <div class="row gy-4 gy-md-0 gx-xxl-5">
            <div class="col-12 col-md-4">
                <div class="card border-0 border-bottom border-primary shadow-sm">
                    <div class="card-body p-4 p-xxl-5">
                        <figure>
                            <div class="d-flex justify-content-center">
                                <img class="img-fluid rounded rounded-circle mb-4 border border-5 col-md-9 col-lg-9 col-sm-6" loading="lazy" src="~/Images/Teachers/director.png" alt="Luke Reeves">
                            </div>
                            <figcaption>
                                <div class="bsb-ratings text-warning mb-3" data-bsb-star="5" data-bsb-star-off="0"></div>
                                <blockquote class="bsb-blockquote-icon mb-4">
                                    Empowering students to understand the world through the precision of mathematics and the wonders of physics.
                                </blockquote>
                                <h4 class="mb-2">Shivakant Shukla</h4>
                                <h5 class="fs-6 text-secondary mb-0">Math & Physics</h5>
                            </figcaption>
                        </figure>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card border-0 border-bottom border-primary shadow-sm">
                    <div class="card-body p-4 p-xxl-5">
                        <figure>
                            <div class="d-flex justify-content-center">
                                <img class="img-fluid rounded rounded-circle mb-4 border border-5 col-md-9 col-lg-9 col-sm-6" loading="lazy" src="~/Images/Teachers/chemistry.jpeg" alt="Luke Reeves">
                            </div>
                            <figcaption>
                                <div class="bsb-ratings text-warning mb-3" data-bsb-star="4" data-bsb-star-off="1"></div>
                                <blockquote class="bsb-blockquote-icon mb-4">
                                     Igniting curiosity and discovery in students through the transformative world of chemistry and its endless possibilities.
                                </blockquote>
                                <h4 class="mb-2">Chemistry Teacher</h4>
                                <h5 class="fs-6 text-secondary mb-0">Chemistry</h5>
                            </figcaption>
                        </figure>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="card border-0 border-bottom border-primary shadow-sm">
                    <div class="card-body p-4 p-xxl-5">
