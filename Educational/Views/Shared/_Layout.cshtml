<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Educational</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Educational.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    

</head>
<body style="background-color: #0b0f19 " >
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light bg-transparent p-0 px-3 border-danger align-items-center">
            <a class="navbar-brand logo-a" asp-controller="Home" asp-action="Index">
                <img src="~/Images/logo.png" class="logo" ></img>
                <h5 class="text-white ms-3">Scholar Coaching Center</h5>
            </a>
            
            <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Admission
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="#">Course</a>
                            <a class="dropdown-item" href="#">Fees Structure</a>
                            <a class="dropdown-item" href="#">Syllabus</a>
                            <a class="dropdown-item" href="#">Get Admission</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Alumni">Alumni</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                           About
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-controller="Home" asp-action="AboutDirector">Director</a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="AboutFaculty">Faculty</a>
                            <a class="dropdown-item" asp-controller="Home" asp-action="AboutMission">Our Mission</a>
                            @*<a class="dropdown-item" asp-controller="Home" asp-action="AboutInstitute">Institution</a>*@
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">Contact </a>
                    </li>
                </ul>
            </div>

        </nav>
    </header>
    <div class="container " style="min-width:98%;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container align-items-center text-center text-white">
            &copy; Scholar Coaching Center.All rights reserved
        </div>
    </footer>

    <!-- Bootstrap JS (only one inclusion) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom site scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
